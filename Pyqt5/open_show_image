main_test11.py

from test11 import Ui_MainWindow
import sys
from PyQt5.QtWidgets import QApplication, QMainWindow, QFileDialog, QMessageBox
from PyQt5.QtGui import QImage,QPixmap
import cv2

resize_img_w = 100
resize_img_h = 100

def open_image(ui_main):
    img = cv2.imread('./image/ccc.jpeg')
    img = cv2.resize(img,(resize_img_w,resize_img_h))
    height,width,channel = img.shape
    step = width * 3
    qimage = QImage(img,width,height,step,QImage.Format_BGR888).rgbSwapped()
    ui_main.label.setPixmap(QPixmap.fromImage(qimage))
    ui_main.textBrowser.setText("show images")
    print(height,width,channel,step)


def open_file(ui_main):
    openfile_name = QFileDialog.getOpenFileName(None,'chosefile','./image','imagefiles *.jpeg *.jpg *.png')
    print(openfile_name)
    if openfile_name[0] != '':
        img = cv2.imread(openfile_name[0])
        img = cv2.resize(img,(resize_img_w,resize_img_h))
        height,width,channel = img.shape
        step = width * 3
        qimage = QImage(img,width,height,step,QImage.Format_BGR888).rgbSwapped()
        # Ui_MainWindow.label.setText("ABCD")
        ui_main.label_2.setPixmap(QPixmap.fromImage(qimage))
    else:
        print('please choose the picture!!!')
        QMessageBox.information(None,'picture choose','please choose image', QMessageBox.Yes | QMessageBox.No, QMessageBox.Yes)


if __name__ == '__main__':

    # application 对象
    app = QApplication(sys.argv)

    # QMainWindow对象
    mainwindow = QMainWindow()

    # 这是qt designer实现的Ui_MainWindow类
    ui_components = Ui_MainWindow()
    # 调用setupUi()方法，注册到QMainWindwo对象
    ui_components.setupUi(mainwindow)

    ui_components.pushButton.clicked.connect(lambda: open_image(ui_components))

    ui_components.toolButton.clicked.connect(lambda: ui_components.label.clear())
    ui_components.toolButton.clicked.connect(lambda: ui_components.label_2.clear())
    ui_components.toolButton.clicked.connect(lambda: ui_components.textBrowser.clear())

    ui_components.openFile.clicked.connect(lambda: open_file(ui_components))


    # 显示
    mainwindow.show()

    sys.exit(app.exec_())
    
    
    
    

main_table.py

from openTable import Ui_MainWindow
import sys
from PyQt5.QtWidgets import QApplication, QMainWindow, QFileDialog, QMessageBox, QTableWidgetItem
from PyQt5.QtCore import Qt
import pandas as pd

resize_img_w = 100
resize_img_h = 100

def open_file(ui_main):
    openfile_name = QFileDialog.getOpenFileName(None,'chosefile','./table','tablefiles *.xlsx *.xls *.csv')
    # print(openfile_name)
    if openfile_name[0] != '':
        text_content = pd.read_excel(openfile_name[0])
        # print(text_content,text_content.shape)
        table_w = text_content.shape[0]
        table_h = text_content.shape[1]
        table_header = text_content.columns.values.tolist()
        # print(table_header)
        ui_main.tableWidget.setColumnCount(table_h)
        ui_main.tableWidget.setRowCount(table_w)
        ui_main.tableWidget.setHorizontalHeaderLabels(table_header)
        # in_value = text_content.iloc[[17], [1]].values
        # print(in_value)
        for i in range(table_h):
            for j in range(table_w):
                in_value = text_content.iloc[[j],[i]].values[0]
                newitem = QTableWidgetItem(str(in_value[0]))
                newitem.setTextAlignment(Qt.AlignHCenter|Qt.AlignVCenter)
                ui_main.tableWidget.setItem(j,i,newitem)
                # print(in_value[0])

    else:
        print('please choose the table!!!')
        QMessageBox.warning(None,'file choose','please choose table file', QMessageBox.Yes, QMessageBox.Yes)


if __name__ == '__main__':

    # application 对象
    app = QApplication(sys.argv)

    # QMainWindow对象
    mainwindow = QMainWindow()

    # 这是qt designer实现的Ui_MainWindow类
    ui_components = Ui_MainWindow()
    # 调用setupUi()方法，注册到QMainWindwo对象
    ui_components.setupUi(mainwindow)

    ui_components.pushButton.clicked.connect(lambda: open_file(ui_components))

    # 显示
    mainwindow.show()

    sys.exit(app.exec_())




